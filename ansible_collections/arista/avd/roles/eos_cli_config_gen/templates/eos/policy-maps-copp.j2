{# eos - policy map copp #}
{% if policy_maps.copp.enable is arista.avd.defined %}
!
policy-map type copp copp-system-policy
{%     for class in policy_maps.copp.classes | arista.avd.natural_sort("name") %}
   class {{ class.name }}
{%         if class.shape is arista.avd.defined %}
      shape pps {{ class.shape }}
{%         endif %}
{%         if class.bandwidth is arista.avd.defined %}
      bandwidth pps {{ class.bandwidth }}
{%         endif %}
{%     endfor %}
{% endif %}
