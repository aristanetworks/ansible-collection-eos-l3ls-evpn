{# eos - policy map copp #}
{% if policy_maps.copp is arista.avd.defined %}
{%     if policy_maps.copp.name is arista.avd.defined %}
!
policy-map type copp {{ policy_maps.copp.name }}
{%         if policy_maps.copp.classes is arista.avd.defined %}
{%             for class in policy_maps.copp.classes | arista.avd.natural_sort("name") %}
{%                 if class.name is arista.avd.defined %}
   class {{ class.name }}
{%                 endif %}
{%                 if class.shape is arista.avd.defined %}
      shape pps {{ class.shape }}
{%                 endif %}
{%             endfor %}
{%         endif %}
{%     endif %}
{% endif %}
