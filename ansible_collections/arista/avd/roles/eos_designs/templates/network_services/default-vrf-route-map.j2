{# prefix_lists #}
prefix_lists:
  PL-SVI-DEFAULT-VRF:
    sequence_numbers:
{% for svi_subnet in default_vrf.svi_subnets %}
      {{ 10*loop.index }}:
        action: "permit {{ svi_subnet }}"
{% endfor %}

{# route_maps #}
route_maps:
  RM-EVPN-EXPORT-VRF-DEFAULT:
    sequence_numbers:
      10:
        type: permit
        match:
        - ip address prefix-list PL-SVI-DEFAULT-VRF
  RM-BGP-UNDERLAY-PEERS-OUT:
    sequence_numbers:
      10:
        type: deny
        match:
        - ip address prefix-list PL-SVI-DEFAULT-VRF
      20:
        type: permit
  RM-CONN-2-BGP:
    sequence_numbers:
      20:
        type: permit
        match:
        - ip address prefix-list PL-SVI-DEFAULT-VRF
